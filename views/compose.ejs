<%- include("half/header"); -%>
<h1>Compose</h1>
<% if (userId) { %>
  <h2>Hi welcome <%= userId %></h2>
<% } %>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <div style="padding-bottom: 20px">
      <label>Add image url</label>
      <input type="text" name="postImage" />
    </div>
    <div style="padding-bottom: 20px">
      <label>Add AuthorName</label>
      <input type="text" name="postAuthor" />
    </div>
    <div style="padding-bottom: 20px">
      <label>Date </label>
      <input type="text" name="postDate" />
    </div>

    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" />
    <label>Post</label>
    <textarea
      class="form-control"
      name="postBody"
      rows="5"
      cols="30"
    ></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("half/footer"); -%>
